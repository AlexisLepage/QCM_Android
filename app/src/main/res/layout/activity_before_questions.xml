<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/before_questions"
        android:id="@+id/tvBeforeQuestions"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="96dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/yes"
        android:id="@+id/btYesQuestions"
        android:layout_marginStart="67dp"
        android:layout_alignTop="@+id/btNoQuestions"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/no"
        android:id="@+id/btNoQuestions"
        android:layout_marginTop="99dp"
        android:layout_below="@+id/tvBeforeQuestions"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp" />

</RelativeLayout>